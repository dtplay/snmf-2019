<h2>Please Login</h2>
<form method="POST" action="/authenticate">
    <table>
        <tr>
            <td>Username:</td>
            <td>
                <input type="text" name="username" size="30" required>
            </td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>
                <input type="password" name="password" size="30" required>
            </td>
        </tr>
        {{#if showChallenge}}
            <tr>
                <td>Challenge:</td>
                <td>
                    <input type="text" name="challenge" size="30" required>
                </td>
            </tr>
        {{/if}}
        <tr>
            <td colspan="2">
                <button type="submit">Login</button>
            </td>
        </tr>
    </table>
</form>